
import { useCallback, useState } from 'react';
import { LogIn, UserPlus, TrendingUp } from 'lucide-react';
import { motion } from 'framer-motion';
import { useNavigate } from 'react-router-dom';
import ParticleBackground from '../components/ParticleBackground';
import { strings } from '../i18n/strings';

const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:3000';

interface LoginProps {
  onLogin?: (accessToken: string, userName: string) => void;
}

type LoginResponse = {
  token?: string;
  data?: {
    token?: string;
    user?: { name?: string; email?: string };
  };
  user?: { name?: string; email?: string };
  error?: string | { message?: string };
};

export function Login({ onLogin }: LoginProps) {
  const [isSignup, setIsSignup] = useState(false);
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [name, setName] = useState('');
  const [error, setError] = useState('');
  const [loading, setLoading] = useState(false);
  const navigate = useNavigate();

  const finalizeLogin = useCallback(
    (token: string, userName: string) => {
      if (onLogin) {
        onLogin(token, userName);
      } else {
        localStorage.setItem('token', token);
        localStorage.setItem('user_name', userName);
        navigate('/dashboard');
      }
    },
    [navigate, onLogin]
  );

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');
    setLoading(true);

    try {
      if (!email || !password || (isSignup && !name)) {
        setError(strings.common.required);
        return;
      }

      const endpoint = isSignup ? '/auth/register' : '/auth/login';
      const body = isSignup ? { email, password, name } : { email, password };

      const resp = await fetch(`${API_URL}${endpoint}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body),
      });

      const json = (await resp.json()) as LoginResponse;
      if (!resp.ok) {
        const message =
          (typeof json.error === 'string' ? json.error : json.error?.message) ||
          strings.login.error;
        throw new Error(message);
      }

      const token = json.data?.token || json.token;
      const user = json.data?.user || json.user;
      if (!token) throw new Error('Token não recebido');

      const userName =
        (user && (user.name || user.email?.split('@')[0])) ||
        name ||
        email.split('@')[0];

      finalizeLogin(token, userName);
    } catch (err: any) {
      console.error('Authentication error:', err);
      setError(err?.message || strings.common.unknownError);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen flex items-center justify-center px-4 relative bg-black text-white">
      <ParticleBackground />
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8 }}
        className="w-full relative z-10 flex flex-col items-center"
      >
        <motion.div
          initial={{ scale: 0.9 }}
          animate={{ scale: 1 }}
          transition={{ duration: 0.5 }}
          className="text-center mb-8"
        >
          <motion.div
            className="flex items-center justify-center gap-3 mb-4"
            whileHover={{ scale: 1.05 }}
            transition={{ type: 'spring', stiffness: 300 }}
          >
            <TrendingUp className="w-12 h-12 text-[#00B8D4]" aria-hidden="true" />
            <h1 className="text-white text-4xl font-semibold tracking-tight">
              {strings.appName}
            </h1>
          </motion.div>
          <p className="text-gray-300 max-w-2xl mx-auto">
            Monitore criptomoedas, crie alertas e receba notificações quando os preços
            mudarem
          </p>
        </motion.div>

        <div className="login-container">
        <motion.section
          className="login-card glass-card-solid w-full shadow-2xl"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.3 }}
          aria-labelledby="auth-title"
        >
          <h2 id="auth-title" className="sr-only">
            {isSignup ? strings.login.registerTab : strings.login.signInTab}
          </h2>

          <div className="login-toggle flex w-full mb-6 rounded-md" role="tablist" aria-label="Alternar autenticação">
            <motion.button
              type="button"
              onClick={() => setIsSignup(false)}
              className={`flex-1 px-6 transition-all ${!isSignup ? 'active' : ''}`}
              whileHover={{ scale: 1.02 }}
              whileTap={{ scale: 0.98 }}
              role="tab"
              aria-selected={!isSignup}
            >
              <LogIn className="w-4 h-4 inline mr-2 text-gray-700" aria-hidden="true" />
              {strings.login.signInTab}
            </motion.button>
            <motion.button
              type="button"
              onClick={() => setIsSignup(true)}
              className={`flex-1 px-6 transition-all ${isSignup ? 'active' : ''}`}
              whileHover={{ scale: 1.02 }}
              whileTap={{ scale: 0.98 }}
              role="tab"
              aria-selected={isSignup}
            >
              <UserPlus className="w-4 h-4 inline mr-2 text-gray-700" aria-hidden="true" />
              {strings.login.registerTab}
            </motion.button>
          </div>

          <form onSubmit={handleSubmit} className="space-y-5" noValidate>
            {isSignup && (
              <motion.div
                initial={{ opacity: 0, height: 0 }}
                animate={{ opacity: 1, height: 'auto' }}
                exit={{ opacity: 0, height: 0 }}
              >
                <label htmlFor="name" className="mb-2">
                  {strings.login.name}
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  value={name}
                  onChange={(e) => setName(e.target.value)}
                  className="login-input"
                  required={isSignup}
                  placeholder="Seu nome"
                />
              </motion.div>
            )}

            <div>
              <label htmlFor="email" className="mb-2">
                {strings.login.email}
              </label>
              <input
                id="email"
                name="email"
                type="email"
                autoComplete="email"
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                className="login-input"
                required
                placeholder="seu@exemplo.com"
              />
            </div>

            <div>
              <label htmlFor="password" className="mb-2">
                {strings.login.password}
              </label>
              <input
                id="password"
                name="password"
                type="password"
                autoComplete={isSignup ? 'new-password' : 'current-password'}
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                className="login-input"
                required
                placeholder="••••••••"
                minLength={6}
              />
            </div>

            {error && (
              <motion.div
                initial={{ opacity: 0, y: -10 }}
                animate={{ opacity: 1, y: 0 }}
                role="alert"
                className="bg-red-800/30 border border-red-700 text-red-200 px-4 py-3 rounded-lg"
              >
                {error}
              </motion.div>
            )}

            <motion.button
              type="submit"
              disabled={loading}
              className="neon-btn"
              whileHover={{ scale: 1.02 }}
              whileTap={{ scale: 0.98 }}
            >
              {loading
                ? strings.login.processing
                : isSignup
                ? strings.login.createAccount
                : strings.login.signIn}
            </motion.button>
          </form>
        </motion.section>
        </div>

        <p className="text-center text-gray-500 mt-6 text-sm">
          Dados de cotação fornecidos por CoinGecko
        </p>
      </motion.div>
    </div>
  );
}

export default Login;

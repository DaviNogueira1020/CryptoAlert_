{
  "version": 2,
  "buildCommand": "cd apps/frontend && npm run build",
  "outputDirectory": "apps/frontend/build",
  "builds": [
    {
      "src": "apps/backend/dist/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/alerts(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/coins(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/health(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/notifications(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/users(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/docs(.*)",
      "dest": "apps/backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

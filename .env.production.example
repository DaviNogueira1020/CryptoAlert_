# Backend Configuration
NODE_ENV=production
PORT=3000

# Database (use PostgreSQL in production)
DATABASE_URL=postgresql://user:password@host:5432/cryptoalert_prod

# JWT Configuration
JWT_SECRET=your-secret-key-minimum-32-characters-recommended
JWT_EXPIRES_IN=7d


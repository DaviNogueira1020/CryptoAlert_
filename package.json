{
  "name": "criptocert-monorepo",
  "version": "1.0.0",
  "description": "CriptoAlert - Real-time crypto price alerts",
  "private": true,
  "type": "module",
  "engine": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/shared"
  ],
  "scripts": {
    "start": node src,
    "dev": "npm run dev --workspace=apps/backend & npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "prisma:generate": "npm run prisma:generate --workspace=apps/backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=apps/backend",
    "prisma:push": "npm run prisma:push --workspace=apps/backend"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express": "^5.0.5",
    "express": "^5.1.0",
    "node-cron": "^4.2.1"
  }
}

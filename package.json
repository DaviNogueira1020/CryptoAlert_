{
  "name": "criptoalert-monorepo",
  "version": "1.0.0",
  "description": "CriptoAlert - Real-time crypto price alerts",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/backend & npm run dev --workspace=apps/frontend",
    "start": "npm run start --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "node-cron": "^4.2.1"
  }
}
